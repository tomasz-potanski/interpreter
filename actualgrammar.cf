
entrypoints Stmt, Exp ;

terminator Stmt "" ;


SBlock. Stmt ::= "begin" [Stmt] "end" ;
SAss. Stmt ::= Ident "=" Exp ";" ;
SIf.  Stmt ::= "if" BExp "then" Stmt ;
SWhile. Stmt ::= "while" BExp "do" Stmt ;

EAdd. Exp  ::= Exp  "+" Exp1 ;
ESub. Exp  ::= Exp  "-" Exp1 ;
EMul. Exp1 ::= Exp1 "*" Exp2 ;
EDiv. Exp1 ::= Exp1 "/" Exp2 ;
EInt. Exp2 ::= Integer ;
EId. Exp2 ::= Ident ;

coercions Exp 2 ;

BOr.  BExp   ::= BExp "||" BExp1 ;
BAnd. BExp1  ::= BExp1 "&&" BExp2 ;

coercions BExp 2 ;
