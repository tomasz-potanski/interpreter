Blockk.			Block	::= VariableDeclaration Block2 ;
Blockk2.		Block2	::= "begin" [Stmt] "end" ;

-------------(Variables Declaration)---------------
VBExists.		VariableDeclaration ::=	"Var" DeclarationLines ;
VBDoesntExists.		VariableDeclaration ::=	;
DLList.			DeclarationLines    ::= [Ident] ":" Type ;
DLSingle.		DeclarationLines    ::= Ident ":" Type ;

terminator nonempty Ident ";" ;
separator Ident "," ;

------------(statements)-------

terminator Stmt "" ;

Stmtt.		Stmt 	::=	Exp ;

EAss.		Exp 	::=	Ident "=" Exp ;

---------(types)-----------

TInt.	Type	::=	"Integer" ;
TBool.	Type 	::=	"Boolean" ;
